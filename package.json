{
  "name": "hes",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "lint": "eslint --ext .js,.ts,.vue --ignore-path .gitignore --fix src & vue-tsc --noEmit"
  },
  "dependencies": {
    "@mdi/font": "5.9.55",
    "@vitejs/plugin-vue": "^1.6.1",
    "@vuetify/vite-plugin": "^1.0.0-alpha.10",
    "@vueuse/core": "^7.7.1",
    "@zip.js/zip.js": "^2.4.5",
    "roboto-fontface": "*",
    "vite": "^2.5.4",
    "vue": "^3.2.13",
    "vue-class-component": "^8.0.0-0",
    "vue-router": "^4.0.3",
    "vuetify": "npm:@vuetify/nightly@^3.0.0-next-20220303.0",
    "vuetify-loader": "^2.0.0-alpha.9",
    "webfontloader": "^1.0.0"
  },
  "devDependencies": {
    "@types/webfontloader": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vue/eslint-config-standard": "^6.1.0",
    "@vue/eslint-config-typescript": "^9.1.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-vue": "^8.5.0",
    "prettier": "^2.4.1",
    "sass": "^1.38.0",
    "typescript": "~4.5.5",
    "vue-tsc": "^0.32.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "vue/setup-compiler-macros": true,
      "es2021": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "@vue/typescript/recommended",
      "plugin:prettier/recommended",
      "@vue/standard",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "max-len": [
        "error",
        90
      ],
      "quotes": "off",
      "semi": "off",
      "comma-dangle": "off",
      "vue/script-setup-uses-vars": "error"
    },
    "plugins": [
      "vue"
    ]
  },
  "prettier": {
    "printWidth": 90
  },
  "browserslist": [
    "es2021"
  ]
}
